CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

clean: 
	-$(RM) *~ \#*\# .*.swp $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
